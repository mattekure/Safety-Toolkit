<root>
	<windowclass name="consentchecklist">
		<frame>storybox</frame>
		<placement>
			<size width="700" height="600"/>
		</placement>
		<sizelimits>
			<minimum width="500" height="400"/>
			<dynamic/>
		</sizelimits>
		<playercontrol/>
		<nodelete/>
		<sharable/>
		<tooltip field="name"/>
		<script>
			function onLockChanged()
				if header.subwindow then
					header.subwindow.update();
				end
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
			end
		</script>
		<sheetdata>
			<sub_note_header name="header">
				<class>checklist_header</class>
			</sub_note_header>
			<frame_record_content name="contentframe"/>
			<subwindow name="main">
				<anchored to="contentframe" position="over"/>
				<class>checklist_main</class>
				<activate/>
			</subwindow>
			<scrollbar_record>
				<target>main</target>
			</scrollbar_record>
			<resize_storybox/>
			<close_storybox/>
		</sheetdata>
	</windowclass>
	<windowclass name="checklist_main">
		<margins control="0,0,0,2"/>
		<sheetdata>
			<anchor_column name="columnanchor"/>
			<label_column name="label_plannedTheme">
				<static textres="check_plannedTheme"/>
			</label_column>
			<basicstring name="plannedTheme">
				<anchored>
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="7"/>
					<left offset="150"/>
					<right offset="-5"/>
					<multilinespacing>20</multilinespacing>
				</anchored>
			</basicstring>
			<label_column name="gamerating">
				<static textres="check_rating"/>
			</label_column>
			<spacer_column name="spacer" >
				<anchored height="15" />
			</spacer_column>
			<label_column name="label_g">
				<static textres="check_g"/>
			</label_column>
			<buttonc_checkbox name="check_G">
				<anchored to="label_g" width="20" height="20">
					<top />
					<left anchor="right" offset="5" />
				</anchored>
			</buttonc_checkbox>
			<label_rating name="label_pg">
				<anchored height="20" to="check_G">
					<top  />
					<left anchor="right" offset="5" />
				</anchored>
				<static textres="check_pg"/>
			</label_rating>
			<buttonc_checkbox name="check_PG">
				<anchored to="label_pg" width="20" height="20">
					<top />
					<left anchor="right" offset="5" />
				</anchored>
			</buttonc_checkbox>
			<label_rating name="label_pg13">
				<anchored height="20" to="check_PG">
					<top  />
					<left anchor="right" offset="5" />
				</anchored>
				<static textres="check_pg13"/>
			</label_rating>
			<buttonc_checkbox name="check_PG13">
				<anchored to="label_pg13" width="20" height="20">
					<top />
					<left anchor="right" offset="5" />
				</anchored>
			</buttonc_checkbox>
			<label_rating name="label_r">
				<anchored height="20" to="check_PG13">
					<top  />
					<left anchor="right" offset="5" />
				</anchored>
				<static textres="check_r"/>
			</label_rating>
			<buttonc_checkbox name="check_R">
				<anchored to="label_r" width="20" height="20">
					<top />
					<left anchor="right" offset="5" />
				</anchored>
			</buttonc_checkbox>
			<label_rating name="label_nc17">
				<anchored height="20" to="check_R">
					<top  />
					<left anchor="right" offset="5" />
				</anchored>
				<static textres="check_nc17"/>
			</label_rating>
			<buttonc_checkbox name="check_NC17">
				<anchored to="label_nc17" width="20" height="20">
					<top />
					<left anchor="right" offset="5" />
				</anchored>
			</buttonc_checkbox>
			<label_rating name="label_ratingOther">
				<anchored height="20" to="check_NC17">
					<top  />
					<left anchor="right" offset="5" />
				</anchored>
				<static textres="check_ratingOther"/>
			</label_rating>
			<basicstring name="ratingOther">
				<anchored >
					<top  parent="columnanchor" anchor="bottom" relation="relative" offset="7"/>
					<left parent="label_ratingOther" anchor="right" offset="10"/>
					<right offset="-5" />
					<multilinespacing>20</multilinespacing>
				</anchored>
			</basicstring>
	

		</sheetdata>
	</windowclass>
	<template name="button_rating">
		<buttonc_checkbox>
			<anchored width="20" height="20">
				<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				<left offset="10" />
			</anchored>
		</buttonc_checkbox>
	</template>

	<template name="label_rating" >
		<stringcontrol>
			<font>sheetlabel</font>
			<nodrag />
			<readonly />			
		</stringcontrol>
	</template>

	<windowclass name="checklist_header">
		<margins control="0,0,0,7"/>
		<script file="campaign/scripts/checklist_header.lua"/>
		<sheetdata>
			<link_record_header>
				<class>consentchecklist</class>
			</link_record_header>
			<anchor_record_header_right name="rightanchor"/>
			<icon_record_locked/>
			<button_record_locked/>
			<stringfield name="name">
				<anchored to="rightanchor" height="24">
					<top offset="-4"/>
					<left parent="" offset="45"/>
					<right anchor="left" relation="relative" offset="-5"/>
				</anchored>
				<font>reference-h</font>
				<empty textres="check_blank"/>
				<nodrag/>
			</stringfield>
			<label name="owner_label">
				<anchored position="insidetopleft" offset="10,32"/>
				<static textres="note_label_owner"/>
			</label>
			<stringcontrol name="owner">
				<anchored to="owner_label" position="righthigh" offset="5,0" height="20"/>
				<font>reference-r</font>
				<readonly/>
			</stringcontrol>
			<genericcontrol name="separator">
				<bounds>5,52,-5,3</bounds>
				<frame name="separatorline"/>
				<disabled/>
			</genericcontrol>
		</sheetdata>
	</windowclass>
</root>